<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="com.w0nd3rl4nd.wondercalc.MainActivity">

    <TextView
        android:id="@+id/tvCalculator"
        android:layout_width="304dp"
        android:layout_height="94dp"
        android:layout_marginTop="84dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAC"
        android:layout_width="148dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:text="AC"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/soft_gray"
        app:layout_constraintStart_toStartOf="@+id/tvCalculator"
        app:layout_constraintTop_toBottomOf="@+id/tvCalculator" />

    <Button
        android:id="@+id/btnZero"
        android:layout_width="148dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textAlignment="textStart"
        android:backgroundTint="@color/hard_gray"
        app:layout_constraintStart_toStartOf="@+id/tvCalculator"
        app:layout_constraintTop_toBottomOf="@+id/btnOne" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:text="."
        android:textColor="@color/white"
        android:backgroundTint="@color/hard_gray"
        app:layout_constraintStart_toEndOf="@+id/btnZero"
        app:layout_constraintTop_toBottomOf="@+id/btnThree" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="="
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/accent_orange"
        app:layout_constraintStart_toEndOf="@+id/btnDot"
        app:layout_constraintTop_toBottomOf="@+id/btnPlus" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/accent_orange"
        android:padding="4dp"
        android:text="/"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/tvCalculator"
        app:layout_constraintTop_toBottomOf="@+id/tvCalculator" />

    <Button
        android:id="@+id/btnSign"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="+/-"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/soft_gray"
        app:layout_constraintEnd_toStartOf="@+id/btnDivide"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnAC"
        app:layout_constraintTop_toBottomOf="@+id/tvCalculator" />

    <Button
        android:id="@+id/btnSeven"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:text="7"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/hard_gray"
        app:layout_constraintStart_toStartOf="@+id/tvCalculator"
        app:layout_constraintTop_toBottomOf="@+id/btnAC" />

    <Button
        android:id="@+id/btnFour"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:text="4"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/hard_gray"
        app:layout_constraintStart_toStartOf="@+id/tvCalculator"
        app:layout_constraintTop_toBottomOf="@+id/btnSeven" />

    <Button
        android:id="@+id/btnOne"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:text="1"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/hard_gray"
        app:layout_constraintStart_toStartOf="@+id/tvCalculator"
        app:layout_constraintTop_toBottomOf="@+id/btnFour" />

    <Button
        android:id="@+id/btnTwo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="2"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/hard_gray"
        app:layout_constraintStart_toEndOf="@+id/btnOne"
        app:layout_constraintTop_toBottomOf="@+id/btnFive" />

    <Button
        android:id="@+id/btnThree"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="3"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/hard_gray"
        app:layout_constraintStart_toEndOf="@+id/btnTwo"
        app:layout_constraintTop_toBottomOf="@+id/btnSix" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="+"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/accent_orange"
        app:layout_constraintStart_toEndOf="@+id/btnThree"
        app:layout_constraintTop_toBottomOf="@+id/btnMinus" />

    <Button
        android:id="@+id/btnSix"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="6"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/hard_gray"
        app:layout_constraintStart_toEndOf="@+id/btnFive"
        app:layout_constraintTop_toBottomOf="@+id/btnNine" />

    <Button
        android:id="@+id/btnFive"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="5"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/hard_gray"
        app:layout_constraintStart_toEndOf="@+id/btnFour"
        app:layout_constraintTop_toBottomOf="@+id/btnEight" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="-"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/accent_orange"
        app:layout_constraintStart_toEndOf="@+id/btnSix"
        app:layout_constraintTop_toBottomOf="@+id/btnMultiply" />

    <Button
        android:id="@+id/btnEight"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="8"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/hard_gray"
        app:layout_constraintStart_toEndOf="@+id/btnSeven"
        app:layout_constraintTop_toBottomOf="@+id/btnAC" />

    <Button
        android:id="@+id/btnNine"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="9"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/hard_gray"
        app:layout_constraintStart_toEndOf="@+id/btnEight"
        app:layout_constraintTop_toBottomOf="@+id/btnSign" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="*"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/accent_orange"
        app:layout_constraintStart_toEndOf="@+id/btnNine"
        app:layout_constraintTop_toBottomOf="@+id/btnDivide" />

</androidx.constraintlayout.widget.ConstraintLayout>